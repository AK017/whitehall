<% page_title "Email curation queue" %>
<h1>Email curation queue</h1>

<table class="table table-striped table-bordered add-top-margin" id="email_curation_queue_items">
  <thead>
    <tr class="table-header">
      <th width="30%">Title for email</th>
      <th width="40%">Summary for email</th>
      <th width="30%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @email_curation_queue_items.any? %>
      <%= render @email_curation_queue_items %>
    <% else %>
      <td colspan="3">Queue empty!</td>
    <% end %>
  </tbody>
</table>
