<%= form_for [:admin, government], as: :government, html: {class: 'government-form'} do |government_form| %>
  <%= government_form.errors %>
  <p><%= government_form.text_field :name %></p>
  <p><%= government_form.text_field :start_date %></p>
  <p><%= government_form.text_field :end_date %></p>

  <p class="warning">
    Warning: changes to government information will appear instantly on the live site.
  </p>

  <%= government_form.save_or_cancel(cancel: admin_organisations_path) %>
<% end %>
